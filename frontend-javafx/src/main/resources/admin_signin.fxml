<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.forum.dashboard.AdminSignInController"
           prefHeight="700.0" prefWidth="1000.0"
           style="-fx-background-color: linear-gradient(135deg, #1a1f36 0%, #2d3748 100%);">
    
    <VBox alignment="CENTER" spacing="0">
        <VBox alignment="CENTER" spacing="24" styleClass="signin-card">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            
            <!-- Title -->
            <Text text="Discussion Forum" styleClass="signin-title">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Text>
            
            <HBox spacing="8" alignment="CENTER">
                <Text text="ðŸ”’" style="-fx-font-size: 24;"/>
                <Text text="Administrator Access" styleClass="admin-subtitle">
                    <font>
                        <Font name="System Bold" size="18"/>
                    </font>
                </Text>
            </HBox>
            
            <Separator prefWidth="300"/>
            
            <!-- Admin Credentials -->
            <VBox spacing="16" alignment="CENTER">
                <Text text="Secure Admin Login" 
                      style="-fx-fill: #2d3748; -fx-font-weight: 600; -fx-font-size: 14;"/>
                
                <TextField fx:id="adminUsernameField" promptText="Admin Username" 
                          styleClass="text-field" prefWidth="320" prefHeight="45"/>
                
                <PasswordField fx:id="adminPasswordField" promptText="Admin Password" 
                              styleClass="text-field" prefWidth="320" prefHeight="45"/>
                
                <Button text="Sign In as Admin" styleClass="admin-button" 
                        prefWidth="320" prefHeight="45" onAction="#handleAdminSignIn">
                    <font>
                        <Font name="System Bold" size="15"/>
                    </font>
                </Button>
            </VBox>
            
            <Separator prefWidth="300"/>
            
            <!-- Back to Student Login -->
            <HBox spacing="5" alignment="CENTER">
                <Text text="Not an administrator?" style="-fx-fill: #718096; -fx-font-size: 13;"/>
                <Hyperlink fx:id="studentLoginLink" text="Student Login" 
                          style="-fx-text-fill: #667eea; -fx-font-weight: bold;" 
                          onAction="#switchToStudentLogin"/>
            </HBox>
            
            <!-- Error Message -->
            <Text fx:id="errorText" styleClass="signin-hint" visible="false"/>
        </VBox>
    </VBox>
</StackPane>
