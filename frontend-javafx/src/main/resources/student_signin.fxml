<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.forum.dashboard.StudentSignInController"
           prefHeight="700.0" prefWidth="1000.0"
           style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    
    <VBox alignment="CENTER" spacing="0">
        <VBox alignment="CENTER" spacing="24" styleClass="signin-card">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            
            <!-- Title -->
            <Text text="Discussion Forum" styleClass="signin-title">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Text>
            
            <Text text="Student Sign In" styleClass="signin-subtitle">
                <font>
                    <Font name="System" size="18"/>
                </font>
            </Text>
            
            <Separator prefWidth="300"/>
            
            <!-- Google Sign In -->
            <Button fx:id="googleButton" text="Sign in with Google" styleClass="oauth-google" 
                    prefWidth="320" prefHeight="45">
                <graphic>
                    <Text text="G" style="-fx-fill: #4285F4; -fx-font-weight: bold; -fx-font-size: 18;"/>
                </graphic>
            </Button>
            
            <Text text="or" style="-fx-fill: #718096; -fx-font-weight: 600;"/>
            
            <!-- Email Sign In Option -->
            <Button fx:id="emailOption" text="ðŸ“§ Sign in with Email" styleClass="oauth-option"
                    prefWidth="320" prefHeight="45"/>
            
            <!-- Username & Password Option (Default Selected) -->
            <VBox fx:id="usernamePasswordBox" spacing="16" alignment="CENTER">
                <TextField fx:id="usernameField" promptText="Username or Student ID" 
                          styleClass="text-field" prefWidth="320" prefHeight="45"/>
                
                <PasswordField fx:id="passwordField" promptText="Password" 
                              styleClass="text-field" prefWidth="320" prefHeight="45"/>
                
                <Button text="Sign In" styleClass="primary-button" 
                        prefWidth="320" prefHeight="45" onAction="#handleStudentSignIn">
                    <font>
                        <Font name="System Bold" size="15"/>
                    </font>
                </Button>
                
                <HBox spacing="8" alignment="CENTER">
                    <Hyperlink text="Forgot Password?" style="-fx-text-fill: #667eea;"/>
                </HBox>
            </VBox>
            
            <Separator prefWidth="300"/>
            
            <!-- Sign Up Link -->
            <HBox spacing="5" alignment="CENTER">
                <Text text="Don't have an account?" style="-fx-fill: #4a5568;"/>
                <Hyperlink fx:id="signupLink" text="Sign up" style="-fx-text-fill: #667eea; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Admin Login Link -->
            <Separator prefWidth="300"/>
            <HBox spacing="5" alignment="CENTER">
                <Text text="Are you an administrator?" style="-fx-fill: #718096; -fx-font-size: 13;"/>
                <Hyperlink fx:id="adminLoginLink" text="Admin Login" 
                          style="-fx-text-fill: #e53e3e; -fx-font-weight: bold;" 
                          onAction="#switchToAdminLogin"/>
            </HBox>
            
            <!-- Error Message -->
            <Text fx:id="errorText" styleClass="signin-hint" visible="false"/>
        </VBox>
    </VBox>
</StackPane>
